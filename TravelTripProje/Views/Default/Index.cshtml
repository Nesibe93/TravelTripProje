@using TravelTripProje.Models.Sınıflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}
<!DOCTYPE HTML>
<html>
<body>

    <div class="header-banner">
        <div class="wrap">
            <div class="banner">
                <div class="indent">
                    <h2 class="indent-left margin-bot">Kolay Seyahat Planı</h2>
                    <div class="banner-left">
                        <div class="con-text">
                            <div class="grid1-img">
                                @*<img src="~/web/images/glass.png" alt="">*@
                                <img src="~/web/images/icons8-restaurant-70.png" />
                            </div>
                            <div class="grid1-desc">
                                <p>Restaurantlar</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                @*<img src="~/web/images/flight.png" alt="">*@
                                <img src="~/web/images/icons8-plane-70.png" />
                            </div>
                            <div class="grid1-desc">
                                <p>Uçuşlar</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                @*<img src="~/web/images/group.png" alt="">*@
                                <img src="~/web/images/icons8-to-do-70.png" />
                            </div>
                            <div class="grid1-desc">
                                <p>Yapılacak Şeyler</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                @*<img src="~/web/images/key.png" alt="">*@
                                <img src="~/web/images/araçkira.png" />
                            </div>
                            <div class="grid1-desc">
                                <p>Araba Kiralama</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="header_bottom_right_images">
                        <div class="slider" style="width:650px; height:365px;">
                            <ul class="rslides" id="slider1">
                                @foreach (var item in Model)
                                {
                                    <li><img src="@item.BlogImage" alt=""></li>
                                }

                                @*<li><img src="~/web/images/img2.jpg" alt=""></li>
                                    <li><img src="~/web/images/img3.jpg" alt=""></li>
                                    <li><img src="~/web/images/img4.jpg" alt=""></li>*@
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class"content">
        <div class="wrap">
            <div class="wrapper">
                <div class="con-top">
                    <h3>Tatil Seyahat Bloğuna Hoşgeldiniz!</h3>
                    <p>Bu projede gezip gördüğüm yerleri sizlerle paylaşmak için kodlamasını tamamiyle kendim yaptığım Mvc5 üzerine kurulu dinamik bir web projesi geliştirdim. Hem yurt dışı hem yurt içi gezilerimi sizlerle paylaşmak niyetindeyim. Umarım beğenirsiniz. Bol gezmeli günler dilerim.</p>
                </div>
                @Html.Action("Partial1","Default")
                <div class="grids">
                    <div class="box1">
                        @Html.Action("Partial3","Default")
                        @Html.Action("Partial4","Default")
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
